services:
  consul:
    image: hashicorp/consul:1.20.2
    container_name: consul
    restart: always
    ports:
      - "8500:8500"
      - "8600:8600/tcp"
      - "8600:8600/udp"
    volumes:
      - {{ consul_data_dir }}:/consul/data
      - {{ consul_config_dir }}/consul.hcl:/consul/config/consul.hcl:ro
    command: "agent -config-file=/consul/config/consul.hcl"